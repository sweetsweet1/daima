摄氏度<input type="text" name="ssd" id="text1" value="">
<button type="button" id="an">转换</button>
华氏度<input type="text" name="hsd" id="text2" value="">
<script type="text/javascript">
    window.onload=function () {
        var x=document.getElementById('text1');
        var y=document.getElementById('text2');
        var z=document.getElementById('an');
        z.onclick=function () {
            let yy=x.value*1.8+32;
            y.value=yy;
        }
    }
</script>
